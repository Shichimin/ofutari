<%= render "shared/header" %>

<div class='post-info'>
  <h3 class='post-title'>
    <%= @post.title %>
  </h3>
  <div class='post-user'>
    <%= User.find_by(id: @post.user_id).nickname %>
  </div>
  <div class='post-category'>
    <%= @post.category.name %>
  </div>
  <div class='post-prefecture'>
    <%= @post.prefecture.name %>
  </div>
  <div class='post-description'>
    <%= @post.description %>
  </div>
  <div class='post-url'>
    <%= @post.url %>
  </div>
</div>

<% if user_signed_in? && current_user.id == @post.user_id %>
  <%= link_to '投稿の編集', edit_post_path(@post.id), method: :get, class: "post-red-btn" %>
  <%= link_to '削除', post_path(@post.id), method: :delete, class:'post-destroy' %>
<% end %>

<%= render "shared/footer" %>