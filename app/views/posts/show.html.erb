<%= render "shared/header" %>

<div class='user-info'>
  <div class='post-user'>
    <%= link_to @post.user.nickname, "/users/#{@post.user_id}" %>
  </div>
</div>

<div class='post-info'>
  <h3 class='post-title'>
    <%= @post.title %>
  </h3>
  <div class='post-category'>
    <%= @post.category.name %>
  </div>
  <div class='post-prefecture'>
    <%= @post.prefecture.name %>
  </div>
  <div class='post-description'>
    <%= @post.description %>
  </div>
  <div class='post-url'>
    <%= @post.url %>
  </div>
</div>

<% if user_signed_in? && current_user.id == @post.user_id %>
  <div class="btn-group">
    <%= link_to '投稿の編集', edit_post_path(@post.id), method: :get, class: "btn btn-sm btn-outline-secondary" %>
    <%= link_to '削除', post_path(@post.id), method: :delete, class:'btn btn-sm btn-outline-secondary' %>
  </div>
<% end %>


<div class="container">
  <% if current_user %>
    <%= form_with(model: [@post, @comment], local: true) do |f| %>
      <%= f.text_area :text, placeholder: "コメントする", rows: "2" %>
      <%= f.submit "SEND" %>
    <% end %>
  <% else %>
    <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
  <% end %>
    <div class="comments">
    <h4>＜コメント一覧＞</h4>
    <% if @comments %>
      <% @comments.each do |comment| %>
        <p>
          <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
          <%= comment.text %>
        </p>
      <% end %>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>